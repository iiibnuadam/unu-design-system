{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "dist",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "lib": ["ESNext", "DOM"],
    "types": ["vue"]
  },
  "include": ["index.ts", "components", "types", "vue-shim.d.ts"],
  "exclude": ["**/*.stories.ts", "**/*.test.ts", "node_modules"]
}
